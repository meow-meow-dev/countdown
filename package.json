{
  "name": "countdown",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently \"vite --config vite.config.server.ts\" \"vite --config vite.config.client.ts\"",
    "build": "vite build --config vite.config.client.ts && vite build --config vite.config.server.ts",
    "preview": "wrangler pages dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "tscheck": "tsc -noEmit -p tsconfig.app.json",
    "wrangler:types": "wrangler types --experimental-include-runtime=./src/wrangler.d.ts && rm -f worker-configuration.d.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.848.0",
    "@hono/valibot-validator": "^0.5.3",
    "@mantine/core": "^8.2.1",
    "@mantine/dates": "^8.2.1",
    "@mantine/form": "^8.2.1",
    "@mantine/hooks": "^8.2.1",
    "@mantine/modals": "^8.2.1",
    "@mantine/notifications": "^8.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "hono": "^4.8.5",
    "lucide-react": "^0.525.0",
    "luxon": "^3.7.1",
    "mantine-form-valibot-resolver": "^3.0.1",
    "react": "^19.1.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "github:antfu/eslint-config",
    "@eslint/js": "^9.31.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.20.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/luxon": "^3.6.2",
    "@types/node": "24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "tailwind-preset-mantine": "^2.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.5",
    "wrangler": "^4.25.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
